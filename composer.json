{
    "name": "ork/csv",
    "type": "library",
    "description": "A library to read and write CSV files.",
    "keywords": ["ork", "csv"],
    "homepage": "http://github.com/AlexHowansky/ork-csv",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Howansky",
            "email": "alex.howansky@gmail.com",
            "homepage": "https://github.com/AlexHowansky"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6.12",
        "ork/phpcs": "^3.0.0",
        "phpcompatibility/php-compatibility": "^10.0.0@dev",
        "phpmetrics/phpmetrics": "^2.9.1",
        "phpstan/phpstan": "^2.1.32",
        "phpunit/phpunit": "^10.5.59",
        "rector/rector": "^2.2.11",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Ork\\Csv\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ork\\Csv\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "coverage": "XDEBUG_MODE=coverage phpunit",
        "markdown": "markdownlint *.md docs",
        "metrics": "phpmetrics --config=phpmetrics.json",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyze",
        "rector": "rector --dry-run --clear-cache",
        "test": "phpunit --no-coverage"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "audit": {
            "abandoned": "report"
        }
    }
}
