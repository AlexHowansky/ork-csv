{
    "name": "ork/csv",
    "type": "library",
    "description": "A library to read and write CSV files.",
    "keywords": ["ork", "csv"],
    "homepage": "http://github.com/AlexHowansky/ork-csv",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Howansky",
            "email": "alex.howansky@gmail.com",
            "homepage": "https://github.com/AlexHowansky"
        }
    ],
    "require": {
        "php": "^7.2",
        "ork/core": "^1.0.2"
    },
    "require-dev": {
        "mikey179/vfsStream": "^1.6.5",
        "ork/phpcs": "^2.0.8",
        "phpstan/phpstan": "^0.11.1",
        "phpunit/phpunit": "^8.0.2"
    },
    "autoload": {
        "psr-4": {
            "Ork\\Csv\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OrkTest\\Csv\\": "tests/"
        }
    },
    "scripts": {
        "markdown": "markdownlint *.md docs",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyze",
        "test": "phpunit --testdox --colors=always --verbose"
    }
}
